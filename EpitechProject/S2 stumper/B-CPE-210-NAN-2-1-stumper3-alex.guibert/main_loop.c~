#include "include/my.h"

static void display_grid(char **grid)
{
    for (int i = 0; grid[i] != NULL; i++) {
        printf("%s\n", grid[i]);
    }
}

static int verif_map_one(char **grid)
{
    int i = 0;

    i = check_end(grid);
    if (i != 0) {
        if (i == 1)
            printf("Player 1 won!");
        if (i == 2)
            printf("Equality");
        exit(0);
    } else {
        return 0;
    } 
}

static int verif_map_two(char **grid)
{
    int i = 0;

    i = check_end(grid);
    if (i != 0) {
        if (i == 1)
            printf("Player 2 won!");
        if (i == 2)
            printf("Equality");
        exit(0);
    } else {
        return 0;
    }
}

int player_one(game_t *game)
{
    char *input = NULL;
    size_t bufsize = 0;
    int read = 0;
    int i = 0;

    printf("Player 1> ");
    read = getline(&input, &bufsize, stdin);
    game->grid = change_map(input, game->grid);
    display_grid(game->grid);
}

int player_two(game_t *game)
{
    char *input = NULL;
    size_t bufsize = 0;
    int read = 0;
    int i = 0;

    printf("Player 2> ");
    read = getline(&input, &bufsize, stdin);
    game->grid = change_map(input, game->grid);
    display_grid(game->grid);
}

int main_loop(game_t *game)
{
    display_grid(game->grid);
    while (1) {
        player_one(game);
        verif_map_one(game->grid);
        player_two(game);
        verif_map_two(game->grid);
    }
}
